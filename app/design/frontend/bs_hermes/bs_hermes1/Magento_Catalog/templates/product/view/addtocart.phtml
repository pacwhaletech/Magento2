    t.controller('mealsAndTickets', function($scope){
        $scope.totalMeals = 0;
        $scope.totalTickets = 0;
        $scope.steak = 0;
        $scope.shrimp = 0;
        $scope.chicken = 0;
        $scope.vegetarian = 0;
        $scope.tickets = {};
        $scope.getNumericValue = function(n){
            var i = parseInt(n);
            return (!isNaN(i)) ? i : 0;
        }
		$scope.getTotalMeals = function(){
			$scope.totalMeals = $scope.getNumericValue($scope.steak) + $scope.getNumericValue($scope.shrimp) + $scope.getNumericValue($scope.chicken) + $scope.getNumericValue($scope.vegetarian);
			$scope.totalTickets = $scope.getTotalTickets();
		}
		$scope.getTotalTickets = function(){
			var qInputs = _$('.cruise-tickets .cruise-ticket input');
			var len = qInputs.length;
			var total = 0;
			for(var i = 0; i < len; i++){
				total += $scope.getNumericValue(_$(qInputs[i]).val());
			}
			return total;
		}
		$scope.getMessage = function(){
			return("Total Meals: " + $scope.totalMeals + "  -  Total Tickets: " + $scope.totalTickets);
		}
        
    });

    // controller
    t.controller('timeAndDate',function($scope,$http){
        $scope.datesAndTimes = [];
        $scope.cruiseTime = "loading";
        $scope.cruiseTimes = [];
        $scope.cruiseDate = 'Loading Dates...';
        $scope.tourCode = 0;
        loadDatesAndTimes($scope);
        var datesAndTimes;
        function hasNoTimes(){
			var b = ($scope.cruiseTimes.length == 0);
			return b;
        }
        $scope.hasNoTimes = hasNoTimes;
        function loadDatesAndTimes($scope){
        	$scope.tourCode = '<?php echo $tour_code;?>';
        	$http.post('/m/custom/check_avail.php', {tourcode:$scope.tourCode}).then(function(response){
        		$scope.datesAndTimes = response.data;
        		$scope.cruiseDate = 'Select a date';
				var options = {
					autoClose: true,
		            dateFormat: 'mm-dd-yy',
		            constrainInput: false,
		            minDate: new Date(),
		            onSelect: function(dt, dp){
		                return onDaySelect(dt, $scope)
		            },
		            beforeShowDay: function(dt){
		                return checkDayForCruises(dt, $scope);
		            }
				}
				$scope.daypicker = _$('.datepicker').datepicker(options);
        	});
          }
        function checkDayForCruises(dt, $scope){
			var hasCruise = !($scope.datesAndTimes[dt.mmddyyyy()] === undefined);
			var dd = new Date()
			if(dd.mmddyyyy() == dt.mmddyyyy()){
				hasCruise = true;
			}
			return [hasCruise, 'highlight'];
        }
        function onDaySelect(dt, $scope){
            dt = new Date(dt);
			$scope.cruiseTimes = $scope.datesAndTimes[dt.mmddyyyy()];
			$scope.cruiseTime = $scope.cruiseTimes[0].time;
			$scope.$digest();
        }
      });
