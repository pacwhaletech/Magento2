    // controller
    t.controller('timeAndDate',function($scope, $rootScope, $http){
        $scope.datesAndTimes = [];
        $scope.cruiseTimes = [];
        $scope.cruiseDate = 'Loading Dates...';
        $scope.tourCode = 0;
        $scope.maxSeats = 0;
        $scope.overMaxSeats = false;
        
        loadDatesAndTimes($scope);
        var datesAndTimes;
        function hasNoTimes(){
			var b = ($scope.cruiseTimes.length == 0);
			return b;
        }
        $scope.hasNoTimes = hasNoTimes;
        function loadDatesAndTimes($scope){
        	$scope.tourCode = '<?php echo $tour_code;?>';
        	$http.post('/m/custom/check_avail.php', {tourcode:$scope.tourCode}).then(function(response){
        		$scope.datesAndTimes = response.data;
        		$scope.cruiseDate = 'Select a date';
				var options = {
					autoClose: true,
		            dateFormat: 'mm-dd-yy',
		            constrainInput: false,
		            minDate: new Date(),
		            onSelect: function(dt, dp){
		                return onDaySelect(dt, $scope)
		            },
		            beforeShowDay: function(dt){
		                return checkDayForCruises(dt, $scope);
		            }
				}
				$scope.daypicker = _$('.datepicker').datepicker(options);
        	});
          }
        function checkDayForCruises(dt, $scope){
			var hasCruise = !($scope.datesAndTimes[dt.mmddyyyy()] === undefined);
			return [hasCruise, 'highlight'];
        }

        $scope.getSeatsMessage = function(){
            return ($scope.overMaxSeats) ? 'Not enough seats. Only ' + $scope.maxSeats + " available." : "";
        }

        $scope.checkSeats = function(){
            $scope.maxSeats = parseInt($scope.cruiseTime.seats);
            if($scope.getTotalTickets() > $scope.maxSeats){
                $scope.overMaxSeats = true;
                _$("#product-addtocart-button").addClass('seats-invalid');
            }
            else{
                $scope.overMaxSeats = false;
                _$("#product-addtocart-button").removeClass('seats-invalid');
            }
        }

        $scope.getAdultSeats = function(){
            return parseInt(_$('.type_adult').val());
        }

        $scope.getTotalTickets = function(){
            var qInputs = _$('.cruise-tickets .cruise-ticket input');
            var len = qInputs.length;
            var total = 0;
            for(var i = 0; i < len; i++){
                var input = _$(qInputs[i]);
                if(input.hasClass('type_accompanying_child')){
                    var val = $scope.getNumericValue(input.val());
                    var adultSeats = $scope.getAdultSeats();
                    if(val > adultSeats){
                        input.val(adultSeats);
                        total += $scope.getNumericValue(adultSeats);
                    }
                    else{
                        total += val;
                    }
                }
                else{
                    total += $scope.getNumericValue(input.val());
                }
            }
            return total;
        }

        function onDaySelect(dt, $scope){
            var dateParts = dt.split('-'); // workaround for safari
            var month = dateParts[0]-1;
            var day = dateParts[1];
            var year = dateParts[2];
            dt = new Date(year, month, day);
			$scope.cruiseTimes = $scope.datesAndTimes[dt.mmddyyyy()];
            $scope.cruiseDate = dt.mmddyyyy();
			$scope.cruiseTime = $scope.cruiseTimes[0].time;
			$scope.$digest();
        }


        $scope.getNumericValue = function(n){
            var i = parseInt(n);
            return (!isNaN(i)) ? i : 0;
        }

        $rootScope.$on("ticketQuantityChange", function(){
            $scope.checkSeats();
        });
