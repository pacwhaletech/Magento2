    t.controller('mealsAndTickets', function($scope, $rootScope){
        $scope.qty_type_accompanying_child = 0;
        $scope.qty_type_adult = 0;
        $scope.qty_type_child_0 = 0;
        $scope.qty_type_child_1 = 0;
        $scope.qty_type_child_2 = 0;

        $scope.totalMeals = 0;
        $scope.totalTickets = 0;
        $scope.steak = 0;
        $scope.shrimp = 0;
        $scope.chicken = 0;
        $scope.vegetarian = 0;
        $scope.tickets = {};

        $scope.getButtonClass = function(){
            return ($scope.totalMeals == $scope.totalTickets)?'':'angular-invalid';
        }

        $scope.getMessageClass = function(){
            return ($scope.totalMeals == $scope.totalTickets)?'':'pwf_error';
        }
        $scope.getNumericValue = function(n){
            var i = parseInt(n);
            return (!isNaN(i)) ? i : 0;
        }
		$scope.getTotalMeals = function(){
	        if($scope.qty_type_adult < $scope.qty_type_accompanying_child){
	        	$scope.qty_type_accompanying_child = $scope.qty_type_adult;
	        }
			$scope.totalMeals = $scope.getNumericValue($scope.steak) + $scope.getNumericValue($scope.shrimp) + $scope.getNumericValue($scope.chicken) + $scope.getNumericValue($scope.vegetarian);
			$scope.totalTickets = $scope.getTotalTickets();
            if($scope.totalMeals != $scope.totalTickets){
                _$("#product-addtocart-button").addClass('meals-invalid');
            }
            else{
                _$("#product-addtocart-button").removeClass('meals-invalid');
            }
            $rootScope.$broadcast("ticketQuantityChange");
		}
		
		$scope.getTotalTickets = function(){
			var qInputs = _$('.cruise-tickets .cruise-ticket input');
			var len = qInputs.length;
			var total = 0;
			for(var i = 0; i < len; i++){
				var input = _$(qInputs[i]);
				if(input.hasClass('type_accompanying_child')){
					var val = $scope.getNumericValue(input.val());
					if(val > $scope.qty_type_adult){
                        input.val($scope.qty_type_adult);
						total += $scope.getNumericValue($scope.qty_type_adult);
					}
					else{
						total += val;
					}
				}
				else{
					total += $scope.getNumericValue(input.val());
				}
				
			}
			return total;
		}
		$scope.getMessage = function(){
